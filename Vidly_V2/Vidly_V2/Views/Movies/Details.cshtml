@model Vidly_V2.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Name</h2>
<ul>
    <li><strong>Genre:</strong> @Model.GenreType.Name</li>
    <li><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</li>
    <li><strong>Date Added:</strong> @Model.AddDate.ToShortDateString()</li>
    <li><strong>Stock:</strong> @Model.Stock.ToString()</li>

</ul>
